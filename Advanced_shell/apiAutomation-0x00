#!/bin/bash
# File: get_pikachu.sh

API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
DATA_FILE="data.json"
ERROR_FILE="errors.txt"

# Fetch data and handle success/failure
if curl -s -f "$API_URL" -o "$DATA_FILE"; then
    echo "Data for Pikachu saved to $DATA_FILE"
else
    echo "$(date '+%Y-%m-%d %H:%M:%S') - Failed to fetch data from $API_URL" >> "$ERROR_FILE"
    echo "Error logged to $ERROR_FILE"
fi
